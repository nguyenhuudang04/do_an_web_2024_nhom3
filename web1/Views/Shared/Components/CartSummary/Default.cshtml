@model IEnumerable<web1.Models.CartItem>

@{
    decimal subtotal = Model.Sum(item => item.Quantity * item.UnitPrice);
    decimal shippingFee = 10.00m; // Có thể thay đổi theo logic của bạn
    decimal total = subtotal + shippingFee;
}

<div class="cart-summary">
    @foreach (var item in Model)
    {
        <div class="d-flex justify-content-between mb-2">
            <span>@item.Product.Name x @item.Quantity</span>
            <span>$@((item.Quantity * item.UnitPrice).ToString("N2"))</span>
        </div>
    }
    
    <hr />
    
    <div class="d-flex justify-content-between mb-2">
        <span>Subtotal:</span>
        <span>$@subtotal.ToString("N2")</span>
    </div>
    
    <div class="d-flex justify-content-between mb-2">
        <span>Shipping Fee:</span>
        <span>$@shippingFee.ToString("N2")</span>
    </div>
    
    <hr />
    
    <div class="d-flex justify-content-between mb-2">
        <strong>Total:</strong>
        <strong>$@total.ToString("N2")</strong>
    </div>
</div> 